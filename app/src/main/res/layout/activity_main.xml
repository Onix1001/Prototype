<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bc_1">

    <LinearLayout
        android:layout_marginTop="200dp"
        android:id="@+id/kanan"
        android:layout_width="200dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/s1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profile"
                    android:layout_centerHorizontal="true"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile"
                    android:background="@drawable/round_ly"
                    android:padding="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/s2"
                android:layout_below="@id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/round_ly"
                    android:src="@drawable/eskul"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:id="@+id/s3"
                android:layout_below="@id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/trophy"
                    android:background="@drawable/round_ly"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="200dp"
        android:id="@+id/kiri"
        android:layout_toRightOf="@id/kanan"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/s4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/man"
                    android:background="@drawable/round_ly"
                    android:padding="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:id="@+id/s5"
                android:layout_below="@id/s4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/hospital"
                    android:background="@drawable/round_ly"
                    android:padding="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/s6"
                android:layout_below="@id/s5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/picture"
                    android:background="@drawable/round_ly"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>